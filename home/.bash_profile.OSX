# ---------------------------------------------------------------------------
#
# Description: This file holds all my BASH configurations
#
# Sections:
# 1. Environment Configuration
# 2. Activate Additional Files
# ---------------------------------------------------------------------------

# 	-------------------------------
# 	1. ENVIRONMENT CONFIGURATION
# 	-------------------------------

#	Brew prefix (if applicable)
# 	------------------------------------------------------------
	prefix=$(brew --prefix)

	if [[ "$prefix" != "" ]]; then
		export BYOBU_PREFIX=$prefix
	fi

#	Homebrew Casks installation folder
# 	------------------------------------------------------------
	export HOMEBREW_CASK_OPTS="--appdir=/Applications"

#	Setup path variables
# 	------------------------------------------------------------
	export GDK_PIXBUF_MODULEDIR="/usr/local/lib/gdk-pixbuf-2.0/2.10.0/loaders"
	export GIT_PATH="$(brew --prefix git)/bin"
	export GIT_CORE_PATH="$GIT_PATH/../libexec/git-core"
	export GIT_MERGE_AUTOEDIT="false"
	#export VLT_HOME="$HOME/CQ5.4/vault-cli-2.3.6"
	export VLT_HOME="$HOME/AEM/vault-cli-3.1.6"
	export PYTHON_HOME="$(brew --prefix python)"
	export PYTHON3_HOME="$(brew --prefix python3)"
	export PHP_HOME="$(brew --prefix homebrew/php/php56)"
	export MYSQL_HOME="$(brew --prefix mysql)"
	export PATH="$HOME/bin:$SVN_HOME/bin:$(brew --prefix coreutils)/libexec/gnubin:$PYTHON_HOME/bin:$PHP_HOME/bin:$MYSQL_HOME/bin:$VLT_HOME/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"

	export MANPATH=$(brew --prefix coreutils)/libexec/gnubin:$MANPATH

# 	Set Default Editor
# 	------------------------------------------------------------
	export EDITOR=/usr/bin/vi

# 	Set terminal colors
# 	------------------------------------------------------------
	export CLICOLOR=1
	export LSCOLORS=GxFxCxDxBxegedabagaced

# 	Maven
# 	------------------------------------------------------------
	export MAVEN_OPTS=' -Xms1860m -Xmx1860m -XX:MaxPermSize=1280m'

# 	bash git completion
# 	------------------------------------------------------------
	if [ -f "$prefix/etc/bash_completion.d/git-completion.bash" ]; then
		source $prefix/etc/bash_completion.d/git-completion.bash
	fi

	if [ -f "$(brew --prefix bash-git-prompt)/share/gitprompt.sh" ]; then
		source "$(brew --prefix bash-git-prompt)/share/gitprompt.sh"
	fi

# 	-------------------------------
# 	2. ACTIVATE ADDITIONAL FILES
# 	-------------------------------
	source ~/.aliases
	source ~/.aliases.OSX
	source ~/.functions

	if [[ -f ~/.work-aliases ]]; then
  		source ~/.work-aliases
	fi

	setjdk 1.7

	if [[ -f ~/proxy_config ]]; then
  		source ~/proxy_config
		enable_proxy
	fi

	# Set alias for sublime
	if [[ ! -f $HOME/bin/subl ]]; then
		mkdir ~/bin
		ln -s "/Applications/Sublime Text.app/Contents/SharedSupport/bin/subl" $HOME/bin/subl
	fi

