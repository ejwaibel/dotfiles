[core]
	autocrlf = false
[color]
	ui = true
	diff = true
[user]
	name = Erik Waibel
	email = ewaibel@itracs.com
[push]
	default = current
[merge]
	tool = meld
[mergetool]
	keepBackup = false
[branch]
	autosetupmerge = true
[url "https://"]
	insteadOf = git://

[alias]
	l = "log --no-merges"
	lg = "log --format='%Cred%h%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset%C(yellow)%d%Creset' --no-merges"
	lgp = "log -p"
	st = status
  	ci = commit
  	br = branch
  	mkbr = checkout -b
  	rmbr = branch -D
  	co = checkout
  	df = diff -w -b
  	mg = merge --no-ff
